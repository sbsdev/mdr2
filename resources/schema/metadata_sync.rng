<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="AbaConnectContainer">
      <element name="Task">
        <element name="Parameter">
          <element name="Application">
            <value>MadrasApi</value>
          </element>
          <element name="Id">
            <value>Document</value>
          </element>
          <element name="Version">
            <value>1.0</value>
          </element>
        </element>
        <element name="Transaction">
          <element name="DocumentData">
            <attribute name="command">
              <value>mdaDocModify</value>
            </attribute>
            <element name="artikel_nr">
              <data type="NCName"/>
            </element>
            <ref name="identifier"/>
            <ref name="title"/>
            <element name="MetaData">
              <element name="dc">
                <ref name="title"/>
                <element name="creator">
                  <data type="token"/>
                </element>
                <element name="source">
                  <data type="NMTOKEN"/>
                </element>
                <element name="language">
                  <data type="NCName"/>
                </element>
                <ref name="identifier"/>
                <element name="date">
                  <data type="date"/>
                </element>
              </element>
              <element name="sbs">
                <element name="idVorstufe">
                  <data type="token"/>
                </element>
                <!-- FIXME: use a pattern here for validation -->
                <element name="printPageNumber">
                  <data type="integer"/>
                </element>
                <element name="idMaster">
                  <data type="NCName"/>
                </element>
                <element name="idPrint">
                  <data type="integer"/>
                </element>
                <element name="kostenstelle">
                  <data type="integer"/>
                </element>
                <element name="ort">
                  <data type="token"/>
                </element>
                <element name="anrede">
                  <data type="NCName"/>
                </element>
                <element name="plz">
                  <data type="integer"/>
                </element>
                <element name="strasse">
                  <data type="token"/>
                </element>
                <element name="vorname">
                  <data type="token"/>
                </element>
                <element name="nachname">
                  <data type="token"/>
                </element>
                <element name="jahr">
                  <text/>
                </element>
              </element>
              <element name="ncc">
                <element name="sourcePublisher">
                  <data type="token"/>
                </element>
                <element name="sourceDate">
                  <data type="token"/>
                </element>
                <element name="narrator">
                  <data type="token"/>
                </element>
                <element name="setInfo">
                  <data type="integer"/>
                </element>
                <element name="revisionDate">
                  <data type="date"/>
                </element>
              </element>
            </element>
          </element>
        </element>
      </element>
    </element>
  </start>
  <define name="identifier">
    <element name="identifier">
      <data type="NCName"/>
    </element>
  </define>
  <define name="title">
    <element name="title">
      <text/>
    </element>
  </define>
</grammar>
